opam-version: "2.0"
name: "opam2nix"
depends: [
  "ocamlfind"
  "opam-solver"
  "opam-state"
  "cudf" # needed for mccs, transitive dep of ocaml-solver
  "lwt"
  "lwt_ppx"
  "ocurl"
  "dune"
  "fileutils"
]
build: [
  [ "dune" "build" "-p" "opam2nix" ]
]
synopsis: "Generate nix expressions from opam packages"
description: "Where opam is lacking, Nix is not"
maintainer: "Tim Cuthbertson <tim@gfxmonk.net>"
authors: "Tim Cuthbertson <tim@gfxmonk.net>"
license: "Apache-2.0"
homepage: "https://github.com/timbertson/opam2nix"
bug-reports: "https://github.com/timbertson/opam2nix/issues"
dev-repo: "git+https://github.com:timbertson/opam2nix.git"
